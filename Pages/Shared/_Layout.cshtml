<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - caint.casa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <a asp-area="" asp-page="/Index"><img src="https://www.caint.casa/CCLogo.svg" class="centreLogo" alt="Caint logo. A house silhouette with a speech bubble inside." height="50px"></a>
        <div class="full-width-Header">
            <span class="centreLeft">
                <a class="nav-link" asp-area="" asp-page="/Threads/Index"><div class ="headerTitle">Threads</div></a>
                <a class="nav-link" asp-area="" asp-page="/Comments/Index"><div class ="headerTitle">Comments</div></a>
                <a class="nav-link" asp-area="" asp-page="/Tenants/Index"><div class ="headerTitle">Sites</div></a>
                <a class="nav-link" asp-area="" asp-page="/Setup"><div class ="headerTitle">Setup</div></a>
                <partial name="_LoginPartial" />
            </span>
        </div>
    </header>
    <div class="bodyContainer">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - caintDashboard - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
